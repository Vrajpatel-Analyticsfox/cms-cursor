      "documentIdFormat": "LDR-YYYYMMDD-Sequence",
      "requiredFields": [
        "linkedEntityType",
        "linkedEntityId",
        "documentName",
        "documentType",
        "accessPermissions"
      ],
      "optionalFields": ["confidentialFlag", "remarksTags"],
      "fieldValidations": {
        "documentName": {
          "maxLength": 100,
          "required": true
        },
        "remarksTags": {
          "maxLength": 250,
          "required": false
        },
        "fileSize": {
          "maxSizeMB": 10,
          "configurable": true
        },
